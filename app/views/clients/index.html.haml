.page-header.m-4
  %p{:style => "color: green"}= notice

  %h1.mb-4
    = "List of clients"
    .float-right
      = link_to "New client",
                new_client_path, class: "btn btn-primary"



%table.table.table-striped
  %thead
    %tr
      %th= "Name"
      %th= "Email"
      %th= "Password"
      %th= "Direction"

  %tbody
    - @clients.each do |client|
      %tr
        %td= client.name
        %td= client.email
        %td= client.password
        %td= client.direction
        %td= link_to "Show this client", client, class: "btn btn-info"
        %td= link_to "Edit this client", edit_client_path(client), class: "btn btn-success"
        %td= button_to "Delete this client", client, method: :delete, class: "btn btn-danger"
